<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_orange"
    android:orientation="vertical"
    tools:context=".Feature2Activity">


    <Button
        android:id="@+id/btnBackToF1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginVertical="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:backgroundTint="@null"
        android:background="@drawable/back_arrow"
        app:layout_constraintBottom_toTopOf="@+id/imgIllustration2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgIllustration2"
        android:layout_width="380dp"
        android:layout_height="320dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/feature_app_2"
        app:layout_constraintBottom_toTopOf="@+id/txtFeature2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtFeature2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/montserrat_light"
        android:gravity="center"
        android:text="@string/feature_page_2_text"
        android:textColor="@color/light_grey"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnCont2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgIllustration2" />

    <Button
        android:id="@+id/btnCont2"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginBottom="160dp"
        app:backgroundTint="@null"
        android:background="@drawable/cont_btn_feature"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/continue_button"
        android:textColor="@color/white_grey"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>