<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/light_muted_pink">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="10dp"
            android:paddingVertical="15dp">

            <ImageView
                android:id="@+id/imgItemThumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/txtItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgItemThumbnail"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/item_title"
                android:textSize="20dp"
                android:textColor="@color/red"/>

            <TextView
                android:id="@+id/txtItemStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:layout_below="@id/txtItemTitle"
                android:layout_toRightOf="@id/imgItemThumbnail"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/yellowish_orange"/>

            <TextView
                android:id="@+id/txtItemSeller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="seller"
                android:layout_below="@id/txtItemStatus"
                android:layout_toRightOf="@id/imgItemThumbnail"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/light_grey"/>

            <TextView
                android:id="@+id/txtItemDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dd/mm/yyyy"
                android:layout_below="@id/txtItemSeller"
                android:layout_toRightOf="@id/imgItemThumbnail"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/light_grey"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>